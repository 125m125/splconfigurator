{
    "parserOptions": {
        "sourceType": "module"
    },

    "env": {
        "node": true
    },

    "rules": {
        "semi": [2, "always"],
        "comma-dangle": ["error", {
            "arrays": "always",
            "objects": "always",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }]
    },
    "extends": "eslint:recommended"
}